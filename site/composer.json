{
  "name": "roots/bedrock",
  "type": "project",
  "license": "MIT",
  "description": "WordPress boilerplate with Composer, easier configuration, and an improved folder structure",
  "homepage": "https://roots.io/bedrock/",
  "authors": [
    {
      "name": "Scott Walkinshaw",
      "email": "scott.walkinshaw@gmail.com",
      "homepage": "https://github.com/swalkinshaw"
    },
    {
      "name": "Ben Word",
      "email": "ben@benword.com",
      "homepage": "https://github.com/retlehs"
    }
  ],
  "keywords": [
    "bedrock",
    "composer",
    "roots",
    "wordpress",
    "wp",
    "wp-config"
  ],
  "support": {
    "issues": "https://github.com/roots/bedrock/issues",
    "forum": "https://discourse.roots.io/category/bedrock"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org",
      "only": [
        "wpackagist-plugin/*",
        "wpackagist-theme/*"
      ]
    },
    {
      "type": "vcs",
      "url": "git@github.com:wstrategies/oxygen.git"
    },
    {
      "type": "vcs",
      "url": "git@github.com:wstrategies/oxygen-woocommerce.git"
    },
    {
      "type": "vcs",
      "url": "git@github.com:wstrategies/all-in-one-wp-migration-unlimited-extension.git"
    },
    {
      "type": "vcs",
      "url": "git@github.com:wstrategies/wp-mail-smtp-pro.git"
    },
    {
      "type": "vcs",
      "url": "git@github.com:wstrategies/oxygen-mobile-sub-menu-master.git"
    },
    {
      "type": "vcs",
      "url": "git@github.com:wstrategies/social-login-pro-woocommerce.git"
    }
  ],
  "require": {
    "php": ">=8.0",
    "composer/installers": "^2.2",
    "vlucas/phpdotenv": "^5.5",
    "oscarotero/env": "^2.1",
    "roots/bedrock-autoloader": "^1.0",
    "roots/bedrock-disallow-indexing": "^2.0",
    "roots/wordpress": "6.4.2",
    "roots/wp-config": "1.0.0",
    "roots/wp-password-bcrypt": "1.1.0",
    "wpackagist-theme/twentytwentyfour": "^1.0",
    "wstrategies/oxygen": "4.8.1",
    "wstrategies/all-in-one-wp-migration-unlimited-extension": "^2.54",
    "wstrategies/wp-mail-smtp-pro": "^3.7.0",
    "wstrategies/oxygen-mobile-sub-menu-master": "^1.1.0",
    "wstrategies/social-login-pro-woocommerce": "^1.0.10",
    "wpackagist-plugin/woo-order-export-lite": "^3.4.5",
    "wpackagist-plugin/all-in-one-wp-migration": "^7.79",
    "wpackagist-plugin/auto-image-attributes-from-filename-with-bulk-updater": "^4.4",
    "wpackagist-plugin/gelato-integration-for-woocommerce": "^1.2.1",
    "wpackagist-plugin/mailchimp": "^1.5.8",
    "wpackagist-plugin/mailchimp-for-woocommerce": "^3.6",
    "wpackagist-plugin/members": "^3.2.9",
    "wpackagist-plugin/performance-lab": "^2.8.0",
    "wpackagist-plugin/printful-shipping-for-woocommerce": "^2.2.7",
    "wpackagist-plugin/redirection": "^5.4.2",
    "wpackagist-plugin/user-menus": "^1.3.2",
    "wpackagist-plugin/woocommerce": "^8.5.2",
    "wpackagist-plugin/woocommerce-services": "^2.4.2",
    "wpackagist-plugin/woocommerce-payments": "^7.1.0",
    "wpackagist-plugin/wp-sentry-integration": "^7.5.1",
    "wpackagist-plugin/insert-headers-and-footers": "^2.1.8",
    "wpackagist-plugin/wpdiscuz": "^7.6.14",
    "wpackagist-plugin/wp-fail2ban": "^5.2.2.1",
    "wpackagist-plugin/wps-hide-login": "^1.9.13.2",
    "wpackagist-plugin/under-construction-page": "^3.98",
    "wpackagist-plugin/code-snippets": "^3.6.2"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.7.1",
    "roave/security-advisories": "dev-latest"
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "allow-plugins": {
      "composer/installers": true,
      "roots/wordpress-core-installer": true
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "extra": {
    "installer-paths": {
      "web/app/mu-plugins/{$name}/": [
        "type:wordpress-muplugin"
      ],
      "web/app/plugins/{$name}/": [
        "type:wordpress-plugin"
      ],
      "web/app/themes/{$name}/": [
        "type:wordpress-theme"
      ]
    },
    "wordpress-install-dir": "web/wp"
  },
  "scripts": {
    "test": [
      "phpcs"
    ]
  }
}
