{
  "name": "wstrategies/wp-bracket-builder",
  "authors": [
    {
      "name": "Barry Molina",
      "email": "barry@wstrategies.co"
    },
    {
      "name": "Karl Molina",
      "email": "karlgmolina@gmail.com"
    },
    {
      "name": "Mark MacEachen",
      "email": "mark.maceachen@gmail.com"
    }
  ],
  "keywords": [
    "wordpress",
    "plugin"
  ],
  "homepage": "https://github.com/wstrategies/wp-bracket-builder",
  "type": "wordpress-plugin",
  "autoload": {
    "psr-4": {
      "WStrategies\\BMB\\": ""
    }
  },
  "autoload-dev": {
    "psr-4": {
      "WStrategies\\BMB\\": ""
    }
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org",
      "only": [
        "wpackagist-plugin/*"
      ]
    }
  ],
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "yoast/phpunit-polyfills": "^1.0",
    "spatie/phpunit-snapshot-assertions": "^4.2",
    "wpackagist-plugin/woocommerce": "8.4.0",
    "php-stubs/wordpress-tests-stubs": "^6.3",
    "phpstan/phpstan": "^1.10",
    "php-stubs/wordpress-stubs": "^6.4",
    "sentry/sentry": "^4.3",
    "php-stubs/woocommerce-stubs": "^8.4",
    "10up/wp_mock": "dev-trunk",
    "dg/bypass-finals": "^1.5",
    "sempro/phpunit-pretty-print": "^1.4",
    "phpunit/phpcov": "^8.2"
  },
  "require": {
    "aws/aws-sdk-php": "^3.270",
    "setasign/fpdf": "^1.8",
    "setasign/fpdi": "^2.3",
    "mailchimp/marketing": "^3.0",
    "mailchimp/transactional": "^1.0",
    "stripe/stripe-php": "^13.8",
    "kreait/firebase-php": "^7.16"
  },
  "scripts": {
    "test-integration": "TEST_TYPE=integration phpunit --configuration=tests/phpunit.xml.dist --testsuite integration",
    "test-unit": "TEST_TYPE=unit phpunit --configuration=tests/phpunit.xml.dist --testsuite unit",
    "test": [
      "@test-unit",
      "@test-integration"
    ],
    "coverage": [
      "mkdir -p /var/www/html/coverage-data",
      "TEST_TYPE=unit phpunit --configuration=tests/phpunit.xml.dist --testsuite unit --coverage-php /var/www/html/coverage-data/unit.cov --coverage-clover /var/www/html/coverage-data/unit.xml",
      "TEST_TYPE=integration phpunit --configuration=tests/phpunit.xml.dist --testsuite integration --coverage-php /var/www/html/coverage-data/integration.cov --coverage-clover /var/www/html/coverage-data/integration.xml",
      "php -d memory_limit=-1 tests/merge-coverage.php"
    ],
    "merge-coverage": [
      "php -d memory_limit=-1 tests/merge-coverage.php"
    ]
  },
  "extra": {
    "installer-paths": {
      "vendor/{$vendor}/{$name}": [
        "wpackagist-plugin/woocommerce"
      ]
    }
  },
  "config": {
    "allow-plugins": {
      "composer/installers": true
    }
  }
}
